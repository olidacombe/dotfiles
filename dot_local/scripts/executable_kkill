#!/usr/bin/env bash

#                                              
# @@@  @@@  @@@  @@@  @@@  @@@       @@@       
# @@@  @@@  @@@  @@@  @@@  @@@       @@@       
# @@!  !@@  @@!  !@@  @@!  @@!       @@!       
# !@!  @!!  !@!  @!!  !@!  !@!       !@!       
# @!@@!@!   @!@@!@!   !!@  @!!       @!!       
# !!@!!!    !!@!!!    !!!  !!!       !!!       
# !!: :!!   !!: :!!   !!:  !!:       !!:       
# :!:  !:!  :!:  !:!  :!:   :!:       :!:      
#  ::  :::   ::  :::   ::   :: ::::   :: ::::  
#  :   :::   :   :::  :    : :: : :  : :: : :  
#                                              
#    k8s pod killer

set -euo pipefail

K="kubectl $*"

SELECTION="$($K get pods -A \
    | sed '1d' \
    | fzf -m \
    | awk '{ print $1,$2 }'
)"

parallel --colsep ' ' $K delete -n "{1}" pod "{2}" <<< "$SELECTION"
